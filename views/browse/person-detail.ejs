<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="centered">
          <h1><%= person.name %></h1>         
          <hr>
          <div id="parentList">
            <% person.parents.forEach((item) => {%>
            <a href="/person/<%= item._id %>" class="link__div">
              <div class="card">
                <div class="card__image">
                  <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
                </div>
                <div class="card__name">
                  <%= item.name %><br>
            
                  <div class="card__group">
                    <div id="bdate" class="card__date">
                      b. <%= item.birthdateFormatted %>
                    </div>
                    <div id="ddate" class="card__date">
                      d. <%= item.deathdateFormatted %>
                    </div>
                  </div>
                </div>
              </div>
            </a>
            <%})%>
          </div>
          <a href="/admin/edit-person/<%= person._id %>" class="link__div">
            <div class="card">
              <div class="card__image">
                <img src="<%= person.imageUrl %>" alt="<%= person.title %>">
              </div>
              <div class="card__name">
                <%= person.name %><br>

                <div class="card__group">
                  <div id="bdate" class="card__date">
                    b. <%= person.birthdateFormatted %>
                  </div>
                  <div id="ddate" class="card__date">
                    d. <%= person.deathdateFormatted %>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </main>
        <%- include('../includes/end.ejs') %>