<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/person.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (people.length > 0) { %>
                    <div>
                      <form action="/admin/filter" method="POST">
                        <input type="text" value="" name="filterText">
                        <button class="btn" type="submit">Search</button>
                      </form>
                    </div>  
                    <div class="grid">
                        <% for (let person of people) { %>
                            <article class="card">
                                <div class="card__image">
                                    <img src="<%= person.imageUrl %>" alt="<%= person.title %>">
                                </div>
                                <div class="card__name">
                                  <%= person.name %><br>
                                  <%= person.birthdate.toISOString().substr(0,10) %>                                      
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-person/<%= person._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-person" method="POST">
                                        <input type="hidden" value="<%= person._id %>" name="personId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No People Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>